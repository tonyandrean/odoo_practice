<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_stock_picking_label_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <t t-foreach="doc.move_line_ids" t-as="line">
                            <table class="table table-bordered" style="width: 100%; text-align: left; margin-top: 0px; padding: 0px;">
                                <tr>
                                    <td colspan="3" style="text-align: center; padding: 0px; font-size: 14px;">
                                        <span t-esc="doc.company_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:center; width: 10%; vertical-align: middle; padding: 0px;">
                                        <img t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo" width="25" height="25"/>
                                    </td>
                                    <td style="width: 70%; padding: 0px; font-size: 14px;">
                                        <strong>Code:</strong> <span t-esc="line.product_id.default_code" />
                                        <br/>
                                        <strong>Product Code:</strong> <span t-esc="line.product_id.display_name" />
                                    </td>
                                    <td style="text-align:center; width: 20%; vertical-align: middle; padding: 0px;">
                                        <img t-att-src="'/report/barcode/QR/' + line.product_id.default_code" width="60" height="60"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="padding: 0px; font-size: 14px;">
                                        <strong>Order Name:</strong> <span t-esc="doc.name" />
                                        <br/>
                                        <strong>Product Name:</strong> <span t-esc="line.product_id.name" />
                                    </td>
                                </tr>
                            </table>

                            <table class="table table-bordered" style="width: 100%; text-align: left; margin-top: 0px; table-layout: fixed; padding: 0px;">
                                <tr style="text-align: center;">
                                    <td rowspan="2" style="height: 50px; vertical-align: middle; padding: 0px;">
                                        <img t-att-src="'/report/barcode/Code128/' + line.product_id.default_code" width="140" height="70"/>
                                    </td>
                                    <td style="font-size: 14px;"><strong>Key</strong></td>
                                    <td style="font-size: 14px;"><strong>Quantity</strong></td>
                                </tr>
                                <tr style="text-align: center;">
                                    <td style="font-size: 14px;"><span t-esc="line.product_id.default_code" /></td>
                                    <td style="font-size: 14px;"><span t-esc="line.quantity" /></td>
                                </tr>
                            </table>

                            <t t-if="line != doc.move_line_ids[-1]">
                                <div style="page-break-before: always;"></div>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
